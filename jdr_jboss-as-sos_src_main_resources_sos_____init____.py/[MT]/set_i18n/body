def set_i18n(path=None):
    try:
        from java.util import ResourceBundle, Locale
        rb = ResourceBundle.getBundle('sos.po.sos', Locale.getDefault(), _get_classloader(path))

        def _java(msg):
            try:
                return rb.getString(msg).encode('utf-8')
            except:
                return msg
        _sos = _java
    except:
        pass
