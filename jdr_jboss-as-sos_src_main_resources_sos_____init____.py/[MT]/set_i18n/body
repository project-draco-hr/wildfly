def set_i18n(path=None, basename='sos.po.sos'):
    'Use this method to change the default i18n behavior from gettext to java\n    ResourceBundle.getString. This is really only useful when using jython.\n    Path is expected to be the path to a jarfile that contains the translation\n    files (.properties)'
    global _sos
    try:
        from java.util import ResourceBundle, Locale
        rb = ResourceBundle.getBundle(basename, Locale.getDefault(), _get_classloader(path))

        def _java(msg):
            try:
                return rb.getString(msg).encode('utf-8')
            except:
                return msg
        _sos = _java
    except:
        pass
