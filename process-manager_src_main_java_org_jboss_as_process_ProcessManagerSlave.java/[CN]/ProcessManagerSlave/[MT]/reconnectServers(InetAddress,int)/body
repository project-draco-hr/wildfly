{
synchronized (output) {
    StringBuilder b=new StringBuilder();
    b.append(Command.RECONNECT_SERVERS);
    b.append('\0');
    b.append(addr.getHostAddress());
    b.append('\0');
    b.append(port);
    b.append('\n');
    StreamUtils.writeString(output,b.toString());
    output.flush();
  }
}
