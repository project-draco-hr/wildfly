{
  if (controller.shutdown.getAndSet(true)) {
    return;
  }
  try {
    handler.shutdown();
  }
 catch (  Throwable t) {
    t.printStackTrace(System.err);
  }
 finally {
    if (socketConnection != null) {
      socketConnection.close();
    }
    final Thread thread=new Thread(new Runnable(){
      public void run(){
        SystemExiter.exit(0);
      }
    }
);
    thread.setName("Exit thread");
    thread.start();
  }
}
