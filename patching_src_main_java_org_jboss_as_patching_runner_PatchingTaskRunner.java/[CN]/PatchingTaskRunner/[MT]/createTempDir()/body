{
  File workDir=null;
  int count=0;
  while (workDir == null || workDir.exists()) {
    count++;
    workDir=new File(TEMP_DIR,DIRECTORY_SUFFIX + count);
  }
  if (!workDir.mkdirs()) {
    throw new PatchingException("Cannot create tmp dir for patch creation at " + workDir);
  }
  return workDir;
}
