{
  final DeploymentUnitProcessorService<T> deploymentUnitProcessorService=new DeploymentUnitProcessorService<T>(deploymentUnitProcessor);
  batchBuilder.addService(DeploymentUnitProcessor.SERVICE_NAME_BASE.append(deploymentUnitProcessor.getClass().getName()),deploymentUnitProcessorService).addDependency(DeploymentChain.SERVICE_NAME,DeploymentChain.class,new DeploymentChainProcessorInjector<T>(deploymentUnitProcessorService,priority));
}
