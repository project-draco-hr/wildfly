{
  final BatchBuilder batchBuilder=context.getBatchBuilder();
  final ServiceName moduleContextServiceName=ContextNames.MODULE.append(context.getName());
  final ContextService contextService=new ContextService(context.getName());
  batchBuilder.addService(moduleContextServiceName,contextService).setInitialMode(ServiceController.Mode.ON_DEMAND).addDependency(ContextNames.GLOBAL,Context.class,contextService.getParentContextInjector());
}
