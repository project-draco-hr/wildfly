{
  values.setRoles(null);
  UpdateUser updateUserState=new UpdateUser(consoleMock,values);
  AssertConsoleBuilder consoleBuilder=new AssertConsoleBuilder().expectedDisplayText(updateUserState.consoleUserMessage(values.getPropertiesFiles().get(0).getCanonicalPath())).expectedDisplayText(AddPropertiesUser.NEW_LINE);
  consoleMock.setResponses(consoleBuilder);
  updateUserState.update(values);
  assertUserPropertyFile(USER_NAME);
  consoleBuilder.validate();
}
