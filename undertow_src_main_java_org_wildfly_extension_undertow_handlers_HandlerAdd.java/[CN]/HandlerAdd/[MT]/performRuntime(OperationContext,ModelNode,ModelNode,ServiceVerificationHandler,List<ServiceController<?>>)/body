{
  final PathAddress address=PathAddress.pathAddress(operation.get(OP_ADDR));
  final String name=address.getLastElement().getValue();
  final HandlerService service=new HandlerService(handler.createHandler(context,model));
  final ServiceTarget target=context.getServiceTarget();
  newControllers.add(target.addService(UndertowService.HANDLER.append(name),service).setInitialMode(ServiceController.Mode.ON_DEMAND).install());
}
