{
  for (int i=0; i < 20; i++) {
    if (checkState(client,serverAddress,state)) {
      return;
    }
    try {
      Thread.sleep(500);
    }
 catch (    InterruptedException e) {
      Thread.currentThread().interrupt();
      return;
    }
  }
  Assert.fail(serverAddress + " never reached the " + state+ " statue");
}
