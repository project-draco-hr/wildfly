{
  PathAddress address=PathAddress.pathAddress(operation.get(OP_ADDR));
  final String name=address.getLastElement().getValue();
  final ModelNode resolvedModel=createResolvedLdapConfiguration(context,model);
  final ServiceTarget serviceTarget=context.getServiceTarget();
  final LdapConnectionManagerService connectionManagerService=new LdapConnectionManagerService(resolvedModel);
  ServiceController<?> sc=serviceTarget.addService(LdapConnectionManagerService.BASE_SERVICE_NAME.append(name),connectionManagerService).setInitialMode(ServiceController.Mode.ON_DEMAND).install();
  if (newControllers != null) {
    newControllers.add(sc);
  }
}
