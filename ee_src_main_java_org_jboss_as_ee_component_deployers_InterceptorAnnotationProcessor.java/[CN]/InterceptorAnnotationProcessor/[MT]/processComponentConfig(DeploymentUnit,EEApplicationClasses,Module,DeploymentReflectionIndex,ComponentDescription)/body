{
  final Class<?> componentClass;
  try {
    componentClass=module.getClassLoader().loadClass(description.getComponentClassName());
  }
 catch (  ClassNotFoundException e) {
    throw EeMessages.MESSAGES.couldNotLoadComponentClass(e,description.getComponentClassName());
  }
  if (!MetadataCompleteMarker.isMetadataComplete(deploymentUnit)) {
    handleAnnotations(deploymentUnit,applicationClasses,deploymentReflectionIndex,componentClass,description);
  }
}
