{
  if (prefixNodeType != null)   throw new IllegalStateException("Can't accept node '" + type + "="+ name+ "' since the prefix ended on the node type '"+ prefixNodeType+ "'");
  if (type == null || type.trim().isEmpty())   throw new IllegalArgumentException("The node type is not specified: '" + type + "'");
  if (name == null || name.trim().isEmpty())   throw new IllegalArgumentException("The node name is not specified: '" + name + "'");
  request.get("address").add(type,name);
}
