{
  StringBuffer buf=new StringBuffer(100);
  boolean comma=false;
  for (int i=0; i < fields.length; ++i) {
    JDBCType type=getJDBCType(fields[i]);
    if (type != null) {
      if (comma)       buf.append(COMMA);
 else       comma=true;
      buf.append(getCreateTableColumnsClause(type));
    }
  }
  return buf.toString();
}
