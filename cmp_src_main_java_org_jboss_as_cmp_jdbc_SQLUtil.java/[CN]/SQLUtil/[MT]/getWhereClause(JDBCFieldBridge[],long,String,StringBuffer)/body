{
  boolean and=false;
  long fieldMask=1;
  for (int i=0; i < fields.length; ++i) {
    if ((fieldMask & mask) > 0) {
      JDBCType type=getJDBCType(fields[i]);
      if (type != null) {
        if (and)         buf.append(AND);
 else         and=true;
        getWhereClause(type,identifier,buf);
      }
    }
    fieldMask<<=1;
  }
  return buf;
}
