{
  long exitTime=20000 + System.currentTimeMillis();
  do {
    boolean allExist=true;
    for (    File file : files) {
      if (!file.exists()) {
        allExist=false;
        break;
      }
    }
    if (allExist) {
      return true;
    }
  }
 while (System.currentTimeMillis() < exitTime);
  return false;
}
