{
  assertNotBuilt();
  built=true;
  ModelNode add=new ModelNode();
  add.get(OP).set(ADD);
  add.get(ADDRESS).set(parent.getLdapAuthorizationAddress().add(USERNAME_TO_DN,USERNAME_FILTER));
  if (force) {
    add.get(FORCE).set(true);
  }
  if (recursive) {
    add.get(RECURSIVE).set(true);
  }
  if (attribute != null) {
    add.get(ATTRIBUTE).set(attribute);
  }
  if (baseDn != null) {
    add.get(BASE_DN).set(baseDn);
  }
  return parent.addStep(add);
}
