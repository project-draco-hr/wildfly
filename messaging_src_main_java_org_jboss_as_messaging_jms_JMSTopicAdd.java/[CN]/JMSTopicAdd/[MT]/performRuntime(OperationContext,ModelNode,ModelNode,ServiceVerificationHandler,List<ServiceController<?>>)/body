{
  final PathAddress address=PathAddress.pathAddress(operation.get(OP_ADDR));
  final String name=address.getLastElement().getValue();
  final ServiceName hqServiceName=MessagingServices.getHornetQServiceName(PathAddress.pathAddress(operation.get(ModelDescriptionConstants.OP_ADDR)));
  ENTRIES.validateResolvedOperation(model);
  final JMSTopicService service=new JMSTopicService(name,JndiEntriesAttribute.getJndiBindings(operation));
  final ServiceName serviceName=JMSServices.getJmsTopicBaseServiceName(hqServiceName).append(name);
  newControllers.add(context.getServiceTarget().addService(serviceName,service).addDependency(JMSServices.getJmsManagerBaseServiceName(hqServiceName),JMSServerManager.class,service.getJmsServer()).addListener(verificationHandler).setInitialMode(Mode.ACTIVE).install());
}
