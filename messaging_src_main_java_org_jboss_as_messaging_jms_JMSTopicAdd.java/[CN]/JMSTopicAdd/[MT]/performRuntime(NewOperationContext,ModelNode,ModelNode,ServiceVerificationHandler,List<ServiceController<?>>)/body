{
  final PathAddress address=PathAddress.pathAddress(operation.get(OP_ADDR));
  final String name=address.getLastElement().getValue();
  final JMSTopicService service=new JMSTopicService(name,jndiBindings(operation));
  final ServiceName serviceName=JMSServices.JMS_TOPIC_BASE.append(name);
  newControllers.add(context.getServiceTarget().addService(serviceName,service).addDependency(JMSServices.JMS_MANAGER,JMSServerManager.class,service.getJmsServer()).addListener(verificationHandler).setInitialMode(Mode.ACTIVE).install());
}
