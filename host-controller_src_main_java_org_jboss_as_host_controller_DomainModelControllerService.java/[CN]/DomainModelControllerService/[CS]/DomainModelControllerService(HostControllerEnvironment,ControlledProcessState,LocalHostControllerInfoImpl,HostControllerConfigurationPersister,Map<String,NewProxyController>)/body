{
  super(NewOperationContext.Type.HOST,configurationPersister,processState,DomainDescriptionProviders.ROOT_PROVIDER,new PrepareStepHandler(hostControllerInfo,hostProxies));
  this.configurationPersister=configurationPersister;
  this.environment=environment;
  this.hostControllerInfo=new LocalHostControllerInfoImpl(processState);
  this.localFileRepository=new LocalFileRepository(environment);
  this.hostProxies=hostProxies;
}
