{
  Resource resource=context.createResource(PathAddress.EMPTY_ADDRESS);
  final PathAddress address=PathAddress.pathAddress(operation.get(OP_ADDR));
  String module=address.getLastElement().getValue();
  resource.getModel().get(MODULE).set(module);
  SimpleResourceDefinition subsystemResource=new SimpleResourceDefinition(PathElement.pathElement(SUBSYSTEM,module),new NonResolvingResourceDescriptionResolver(),new FakeSubsystemAddHandler(),ReloadRequiredRemoveStepHandler.INSTANCE);
  rootRegistration.registerSubModel(subsystemResource);
  context.stepCompleted();
}
