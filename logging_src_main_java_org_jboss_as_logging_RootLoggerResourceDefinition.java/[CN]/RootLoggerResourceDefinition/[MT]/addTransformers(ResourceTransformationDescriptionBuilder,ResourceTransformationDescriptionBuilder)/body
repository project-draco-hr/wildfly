{
  final ResourceTransformationDescriptionBuilder child=subsystemBuilder.addChildResource(ROOT_LOGGER_PATH).addOperationTransformationOverride(ADD).setCustomOperationTransformer(LoggingOperationTransformer.INSTANCE).inheritResourceAttributeDefinitions().end().addOperationTransformationOverride(WRITE_ATTRIBUTE_OPERATION).setCustomOperationTransformer(LoggingOperationTransformer.INSTANCE).inheritResourceAttributeDefinitions().end().addOperationTransformationOverride(ROOT_LOGGER_ADD_OPERATION_NAME).setCustomOperationTransformer(LoggingOperationTransformer.INSTANCE).inheritResourceAttributeDefinitions().end().addOperationTransformationOverride(ADD_HANDLER_OPERATION_NAME).setCustomOperationTransformer(LoggingOperationTransformer.INSTANCE).inheritResourceAttributeDefinitions().end().addOperationTransformationOverride(REMOVE_HANDLER_OPERATION_NAME).setCustomOperationTransformer(LoggingOperationTransformer.INSTANCE).inheritResourceAttributeDefinitions().end().getAttributeBuilder().addRejectCheck(RejectAttributeChecker.SIMPLE_EXPRESSIONS,EXPRESSION_ATTRIBUTES).end().setCustomResourceTransformer(new LoggingResourceTransformer(NAME,FILTER_SPEC));
  loggingProfileBuilder.discardChildResource(ROOT_LOGGER_PATH);
