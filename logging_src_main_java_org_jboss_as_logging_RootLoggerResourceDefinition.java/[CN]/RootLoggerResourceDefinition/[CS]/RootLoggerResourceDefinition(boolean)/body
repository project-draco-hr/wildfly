{
  super(ROOT_LOGGER_PATH,ROOT_RESOLVER,(includeLegacy ? new LoggerOperations.LoggerAddOperationStepHandler(join(ATTRIBUTES,LEGACY_ATTRIBUTES)) : new LoggerOperations.LoggerAddOperationStepHandler(ATTRIBUTES)),LoggerOperations.REMOVE_LOGGER);
  attributes=(includeLegacy ? join(ATTRIBUTES,LEGACY_ATTRIBUTES) : ATTRIBUTES);
  addHandler=new LoggerOperations.LoggerAddOperationStepHandler(attributes);
  writeHandler=new LoggerOperations.LoggerWriteAttributeHandler(attributes);
}
