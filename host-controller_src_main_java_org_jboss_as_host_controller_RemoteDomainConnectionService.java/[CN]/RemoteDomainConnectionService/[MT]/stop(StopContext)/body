{
  Runnable r=new Runnable(){
    @Override public void run(){
      try {
        StreamUtils.safeClose(connection);
        scheduledExecutorService.shutdownNow();
      }
  finally {
        context.complete();
      }
    }
  }
;
  try {
    executor.execute(r);
  }
 catch (  RejectedExecutionException e) {
    r.run();
  }
 finally {
    context.asynchronous();
  }
}
