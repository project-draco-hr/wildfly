{
  if (closing)   return;
  closing=true;
  log.infof("Closing connection local port: %d, remote port: %d",socket.getLocalPort(),socket.getPort());
  try {
    socket.shutdownOutput();
  }
 catch (  IOException e) {
    e.printStackTrace();
  }
  try {
    socket.shutdownInput();
  }
 catch (  IOException e) {
    e.printStackTrace();
  }
  try {
    socket.close();
  }
 catch (  IOException e) {
    e.printStackTrace();
  }
}
