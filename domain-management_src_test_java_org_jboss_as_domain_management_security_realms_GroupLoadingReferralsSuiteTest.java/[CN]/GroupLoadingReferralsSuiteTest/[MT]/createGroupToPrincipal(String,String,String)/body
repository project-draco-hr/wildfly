{
  return securityRealmBuilder(realmName,connectionName,usersBaseDn).authorization().ldap().setConnection(connectionName).usernameFilter().setBaseDn(G2P_USERS_BASE_DN).setRecursive(false).setAttribute(USERNAME_FILTER).build().groupToPrincipal().setBaseDn(G2P_GROUPS_BASE_DN).setPrincipalAttribute("uniqueMember").setIterative(true).setRecursive(true).build().build().build().build();
}
