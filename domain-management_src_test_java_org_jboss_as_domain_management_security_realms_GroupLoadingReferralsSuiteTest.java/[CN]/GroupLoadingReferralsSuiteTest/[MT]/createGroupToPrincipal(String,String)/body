{
  return SecurityRealmAddBuilder.builder(realmName).authentication().ldap().setConnection(connectionName).setBaseDn(BASE_DN).setUsernameFilter(USERNAME_FILTER).build().build().authorization().ldap().setConnection(connectionName).usernameFilter().setBaseDn(BASE_DN).setRecursive(false).setAttribute(USERNAME_FILTER).build().groupToPrincipal().setBaseDn(GROUPS_DN).setPrincipalAttribute("uniqueMember").setIterative(true).setRecursive(true).build().build().build().build();
}
