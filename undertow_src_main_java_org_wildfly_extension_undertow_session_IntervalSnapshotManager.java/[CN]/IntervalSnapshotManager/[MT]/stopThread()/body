{
  boolean intr=false;
  try {
    if (thread == null) {
      return;
    }
    threadDone=true;
    thread.interrupt();
    try {
      thread.join();
    }
 catch (    InterruptedException e) {
      intr=true;
    }
    thread=null;
  }
  finally {
    if (intr)     Thread.currentThread().interrupt();
  }
}
