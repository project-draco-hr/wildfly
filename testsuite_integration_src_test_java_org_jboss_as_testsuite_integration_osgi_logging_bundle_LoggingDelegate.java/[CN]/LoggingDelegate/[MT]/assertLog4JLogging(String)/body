{
  org.apache.log4j.Logger log=org.apache.log4j.Logger.getLogger(LoggingDelegate.class);
  String loggerClass=log.getClass().getName();
  if ("org.jboss.logmanager.log4j.BridgeLogger".equals(loggerClass) == false)   throw new IllegalStateException("Unexpected logger: " + loggerClass);
  log.info("*******************************************");
  log.info("* Log4J: " + message);
  log.info("*******************************************");
}
