{
  final HostControllerConnectionService hcConnection=new HostControllerConnectionService();
  serviceTarget.addService(HostControllerConnectionService.SERVICE_NAME,hcConnection).addInjection(hcConnection.hcAddressInjector,managementSocket).addDependency(RemotingServices.ENDPOINT,Endpoint.class,hcConnection.endpointInjector).setInitialMode(ServiceController.Mode.ACTIVE).install();
}
