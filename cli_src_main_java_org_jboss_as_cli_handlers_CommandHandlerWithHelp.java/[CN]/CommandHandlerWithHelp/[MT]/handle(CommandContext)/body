{
  if (helpArg.isPresent(ctx.getParsedCommandLine())) {
    printHelp(ctx);
    return;
  }
  if (!isAvailable(ctx)) {
    ctx.error("The command is not available in the current context (e.g. required subsystems or connection to the controller might be unavailable).");
    return;
  }
  doHandle(ctx);
}
