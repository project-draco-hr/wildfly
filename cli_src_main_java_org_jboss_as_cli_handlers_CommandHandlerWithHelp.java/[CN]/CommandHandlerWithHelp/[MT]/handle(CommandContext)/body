{
  if (ctx.hasSwitch("help")) {
    printHelp(ctx);
    return;
  }
  if (connectionRequired) {
    ModelControllerClient client=ctx.getModelControllerClient();
    if (client == null) {
      ctx.printLine("The controller client is not available. Make sure you are connected.");
      return;
    }
  }
  doHandle(ctx);
}
