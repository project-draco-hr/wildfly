{
  for (int i=0; i < name.length(); ++i) {
    char ch=name.charAt(i);
    if (ch == ':' || ch == '/') {
      StringBuilder builder=new StringBuilder();
      builder.append('"');
      for (int j=0; j < name.length(); ++j) {
        ch=name.charAt(j);
        if (ch == '"') {
          builder.append('\\');
        }
        builder.append(ch);
      }
      builder.append('"');
      return builder.toString();
    }
  }
  return name;
}
