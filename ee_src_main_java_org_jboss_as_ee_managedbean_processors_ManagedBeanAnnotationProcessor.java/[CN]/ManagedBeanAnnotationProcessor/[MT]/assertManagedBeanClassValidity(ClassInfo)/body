{
  final short flags=managedBeanClass.flags();
  final String className=managedBeanClass.name().toString();
  if (Modifier.isInterface(flags)) {
    logger.warn("[Managed Bean spec, section MB.2.1.1] Managed bean implementation class MUST NOT be a interface - " + className + " is an interface, hence won't be considered as a managed bean");
    return false;
  }
  if (Modifier.isAbstract(flags) || Modifier.isFinal(flags)) {
    logger.warn("[Managed Bean spec, section MB.2.1.1] Managed bean implementation class MUST NOT be abstract or final - " + className + " won't be considered as a managed bean, since it doesn't meet that requirement");
    return false;
  }
  return true;
}
