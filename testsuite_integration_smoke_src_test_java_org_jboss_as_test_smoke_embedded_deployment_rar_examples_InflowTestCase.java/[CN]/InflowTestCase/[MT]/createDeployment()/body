{
  String deploymentName="inflow.rar";
  ResourceAdapterArchive raa=ShrinkWrap.create(ResourceAdapterArchive.class,deploymentName);
  JavaArchive ja=ShrinkWrap.create(JavaArchive.class,"multiple.jar");
  ja.addPackage(PureInflowResourceAdapter.class.getPackage()).addClasses(InflowTestCase.class,AbstractMgmtTestBase.class,MgmtOperationException.class);
  raa.addAsLibrary(ja);
  raa.addAsManifestResource("rar/" + deploymentName + "/META-INF/ra.xml","ra.xml").addAsManifestResource("rar/" + deploymentName + "/META-INF/ironjacamar.xml","ironjacamar.xml").addAsManifestResource(new StringAsset("Dependencies: org.jboss.as.controller-client,org.jboss.dmr,org.jboss.as.cli,javax.inject.api,org.jboss.as.connector\n"),"MANIFEST.MF");
  return raa;
}
