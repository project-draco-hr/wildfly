{
  try {
    StaticDiscoveryResourceDefinition.HOST.getValidator().validateParameter(StaticDiscoveryResourceDefinition.HOST.getName(),new ModelNode(remoteDcHost));
    StaticDiscoveryResourceDefinition.PORT.getValidator().validateParameter(StaticDiscoveryResourceDefinition.PORT.getName(),new ModelNode(remoteDcPort));
  }
 catch (  OperationFailedException e) {
    throw new IllegalStateException(e.getFailureDescription().asString());
  }
}
