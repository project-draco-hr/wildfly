{
  SocketBindingService service=new SocketBindingService(this);
  BatchServiceBuilder<SocketBinding> batch=activatorContext.getBatchBuilder().addService(SocketBinding.JBOSS_BINDING_NAME.append(getName()),service);
  batch.addDependency(NetworkInterfaceService.JBOSS_NETWORK_INTERFACE.append(getInterfaceName()),NetworkInterfaceBinding.class,service.getInterfaceBinding());
  batch.addDependency(SocketBindingManager.SOCKET_BINDING_MANAGER,SocketBindingManager.class,service.getSocketBindings());
  batch.setInitialMode(Mode.ON_DEMAND);
}
