{
  boolean done=false;
  log.infof("PM listening on port %d",Integer.valueOf(serverSocket.getLocalPort()));
  while (!done) {
    try {
      Socket socket=serverSocket.accept();
      executor.execute(new ProcessAcceptorTask(socket));
    }
 catch (    SocketException e) {
      log.info("PM closed server socket");
      done=true;
    }
catch (    IOException e) {
      e.printStackTrace();
    }
  }
}
