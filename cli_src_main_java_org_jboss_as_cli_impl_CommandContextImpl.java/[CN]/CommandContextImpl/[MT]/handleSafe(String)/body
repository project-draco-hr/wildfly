{
  exitCode=0;
  try {
    handle(line);
  }
 catch (  CommandLineException e) {
    final StringBuilder buf=new StringBuilder();
    buf.append(e.getLocalizedMessage());
    Throwable t=e.getCause();
    while (t != null) {
      buf.append(": ").append(t.getLocalizedMessage());
    }
    error(buf.toString());
  }
}
