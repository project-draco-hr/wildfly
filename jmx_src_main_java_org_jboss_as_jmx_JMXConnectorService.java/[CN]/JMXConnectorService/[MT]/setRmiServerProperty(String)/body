{
  if (System.getProperty(SERVER_HOSTNAME) != null) {
    return;
  }
  SecurityManager sm=System.getSecurityManager();
  if (sm != null) {
    AccessController.doPrivileged(new PrivilegedAction<Void>(){
      public Void run(){
        if (System.getProperty(SERVER_HOSTNAME) == null) {
          System.setProperty(SERVER_HOSTNAME,address);
        }
        return null;
      }
    }
);
  }
 else {
    if (System.getProperty(SERVER_HOSTNAME) == null) {
      System.setProperty(SERVER_HOSTNAME,address);
    }
  }
}
