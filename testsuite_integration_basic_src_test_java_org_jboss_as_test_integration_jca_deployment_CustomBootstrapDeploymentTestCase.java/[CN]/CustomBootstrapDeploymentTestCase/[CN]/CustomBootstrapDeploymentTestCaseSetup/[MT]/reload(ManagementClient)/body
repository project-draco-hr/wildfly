{
  ModelNode operation=new ModelNode();
  operation.get(OP).set("reload");
  executeOperation(operation);
  boolean reloaded=false;
  int i=0;
  while (!reloaded) {
    try {
      Thread.sleep(5000);
      if (managementClient.isServerInRunningState())       reloaded=true;
    }
 catch (    Throwable t) {
    }
 finally {
      if (!reloaded && i++ > 10)       throw new Exception("Server reloading failed");
    }
  }
}
