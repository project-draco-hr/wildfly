{
  System.clearProperty(BlockingTimeout.SYSTEM_PROPERTY);
  releaseBlockingThreads();
  if (client != null) {
    try {
      client.close();
    }
 catch (    IOException e) {
      e.printStackTrace();
    }
  }
  if (container != null) {
    container.shutdown();
    try {
      container.awaitTermination(5,TimeUnit.SECONDS);
    }
 catch (    InterruptedException e) {
      e.printStackTrace();
    }
 finally {
      container=null;
    }
  }
}
