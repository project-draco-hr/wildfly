{
  if (file.exists()) {
    if (file.isDirectory()) {
      for (      String name : file.list()) {
        remove(new File(file,name));
      }
    }
    if (!file.delete()) {
      log.error("Could not delete [" + file.getPath() + ".");
    }
  }
 else {
    throw new IllegalStateException("Module [" + this.moduleName + "] does not exists.");
  }
}
