{
  if (ctx.getCharacter() == '\\') {
    if (ctx.getInput().regionMatches(ctx.getLocation() + 1,Util.LINE_SEPARATOR,0,Util.LINE_SEPARATOR.length())) {
      if (leaveOnLnBreak) {
        ctx.leaveState();
      }
    }
 else     if (fallbackToEscape) {
      ctx.enterState(EscapeCharacterState.INSTANCE);
    }
 else {
      doHandle(ctx);
    }
  }
 else {
    doHandle(ctx);
  }
}
