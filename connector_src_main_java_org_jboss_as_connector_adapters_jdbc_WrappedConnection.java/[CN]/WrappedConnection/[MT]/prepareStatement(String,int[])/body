{
  lock();
  try {
    checkTransaction();
    try {
      if (spy)       spyLogger.debugf("%s [%s] prepareStatement(%s, %s)",jndiName,Constants.SPY_LOGGER_PREFIX_CONNECTION,sql,Arrays.toString(columnIndexes));
      return wrapPreparedStatement(mc.getConnection().prepareStatement(sql,columnIndexes),spy,jndiName);
    }
 catch (    Throwable t) {
      throw checkException(t);
    }
  }
  finally {
    unlock();
  }
}
