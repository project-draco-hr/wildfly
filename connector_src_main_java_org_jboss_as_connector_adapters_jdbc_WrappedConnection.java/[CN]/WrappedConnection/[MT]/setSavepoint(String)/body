{
  lock();
  try {
    checkTransaction();
    try {
      if (spy)       spyLogger.debugf("%s [%s] setSavepoint(%s)",jndiName,Constants.SPY_LOGGER_PREFIX_CONNECTION,name);
      return mc.getConnection().setSavepoint(name);
    }
 catch (    Throwable t) {
      throw checkException(t);
    }
  }
  finally {
    unlock();
  }
}
