{
  ModelNode operation=Util.createOperation(ADD,pathAddress(pathElement(CORE_SERVICE,MANAGEMENT),pathElement(ACCESS,ModelDescriptionConstants.AUTHORIZATION),pathElement(HOST_SCOPED_ROLE,roleName)));
  operation.get(BASE_ROLE).set(baseRole);
  ModelNode hostsModelNode=operation.get(HOSTS);
  for (  String host : hosts) {
    hostsModelNode.add(host);
  }
  executeOperation(client,operation,Outcome.SUCCESS);
}
