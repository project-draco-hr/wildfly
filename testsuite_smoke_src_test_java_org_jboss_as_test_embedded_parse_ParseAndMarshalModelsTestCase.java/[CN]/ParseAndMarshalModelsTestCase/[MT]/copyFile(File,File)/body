{
  final InputStream in=new BufferedInputStream(new FileInputStream(src));
  try {
    dest.getParentFile().mkdirs();
    final OutputStream out=new BufferedOutputStream(new FileOutputStream(dest));
    try {
      int i=in.read();
      while (i != -1) {
        out.write(i);
        i=in.read();
      }
    }
  finally {
      close(out);
    }
  }
  finally {
    close(in);
  }
}
