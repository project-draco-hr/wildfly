{
  if (!destDir.exists()) {
    if (!destDir.mkdirs()) {
      throw new IOException("failed to create " + destDir);
    }
  }
  File[] files=srcDir.listFiles();
  for (  File file : files) {
    if (file.isFile()) {
      final File dest=new File(destDir,file.getName());
      copyFile(file,dest);
    }
  }
}
