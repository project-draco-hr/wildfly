{
  assertTrue(rootFile + " does not exist",rootFile.exists());
  File f=rootFile;
  for (  String segment : segments) {
    f=new File(f,segment);
    assertTrue(f + " does not exist",f.exists());
  }
  assertEquals(f + " is " + (isDir ? "not" : "")+ " a directory",isDir,f.isDirectory());
  return f;
}
