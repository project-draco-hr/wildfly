def _convert_bytes(self, n):
    (K, M, G, T) = ((1 << 10), (1 << 20), (1 << 30), (1 << 40))
    if (n >= T):
        return ('%.1fT' % (float(n) / T))
    elif (n >= G):
        return ('%.1fG' % (float(n) / G))
    elif (n >= M):
        return ('%.1fM' % (float(n) / M))
    elif (n >= K):
        return ('%.1fK' % (float(n) / K))
    else:
        return ('%d' % n)
