def _format(self, path):
    'Conditionally adds detail to paths'
    stats = os.stat(path)
    details = {'filename': os.path.basename(path), 'user': self._get_user(stats), 'group': self._get_group(stats), 'filesize': self._convert_bytes(stats.st_size), }
    return (('[%(user)s %(group)s %(filesize)s] ' % details), ('%(filename)s' % details))
