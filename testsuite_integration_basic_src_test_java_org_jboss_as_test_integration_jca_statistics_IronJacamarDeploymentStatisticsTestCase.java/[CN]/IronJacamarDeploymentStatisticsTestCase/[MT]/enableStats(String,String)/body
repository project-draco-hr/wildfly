{
  String arch="archive" + name + ".rar";
  ModelNode statAddress=new ModelNode();
  statAddress.add(DEPLOYMENT,arch).add(SUBSYSTEM,"resource-adapters").add("statistics","statistics").add("resource-adapter",arch).add("connection-definitions",cdName);
  statAddress.protect();
  ModelNode operation=new ModelNode();
  operation.get(OP).set("write-attribute");
  operation.get(OP_ADDR).set(statAddress);
  operation.get("name").set("statistics-enabled");
  operation.get("value").set(true);
  executeOperation(operation);
}
