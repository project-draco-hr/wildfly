{
  if (persistenceUnitName.indexOf('/') != -1) {
    throw MESSAGES.invalidPersistenceUnitName(persistenceUnitName,'/');
  }
  if (persistenceUnitName.indexOf('#') != -1) {
    throw MESSAGES.invalidPersistenceUnitName(persistenceUnitName,'#');
  }
  String unitName=getScopedDeploymentUnitPath(deploymentUnit) + "#" + persistenceUnitName;
  return unitName;
}
