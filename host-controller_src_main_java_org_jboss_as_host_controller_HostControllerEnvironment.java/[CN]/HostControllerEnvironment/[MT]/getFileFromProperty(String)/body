{
  String value=hostSystemProperties.get(name);
  File result=(value != null) ? new File(value) : null;
  if (result != null && homeDir != null && !result.exists() && !result.isAbsolute()) {
    File relative=new File(homeDir,value);
    if (relative.exists()) {
      result=relative;
    }
  }
  return result;
}
