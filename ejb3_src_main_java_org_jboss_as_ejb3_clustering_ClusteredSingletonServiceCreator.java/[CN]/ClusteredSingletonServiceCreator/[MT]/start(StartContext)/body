{
  final ServiceTarget target=context.getChildTarget();
  final SingletonPolicy singletonPolicyValue=singletonPolicy.getValue();
  singletonPolicyValue.createSingletonServiceBuilder(CLUSTERED_SINGLETON_CAPABILITY.getCapabilityServiceName(),new ClusteredSingletonService()).build(target).setInitialMode(ServiceController.Mode.ON_DEMAND).install();
}
