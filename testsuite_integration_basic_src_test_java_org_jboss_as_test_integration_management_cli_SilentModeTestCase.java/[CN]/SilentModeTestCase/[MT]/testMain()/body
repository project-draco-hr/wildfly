{
  cliOut.reset();
  final CommandContext ctx=CLITestUtil.getCommandContext(cliOut);
  try {
    ctx.handle("help");
    assertFalse(cliOut.toString().isEmpty());
    cliOut.reset();
    ctx.setSilent(true);
    ctx.handle("help");
    assertTrue(cliOut.toString().isEmpty());
    cliOut.reset();
    ctx.setSilent(false);
    ctx.handle("help");
    assertFalse(cliOut.toString().isEmpty());
  }
  finally {
    ctx.terminateSession();
    cliOut.reset();
  }
}
