{
  Transaction tx=this.getTransaction();
  if (tx != null) {
    try {
      tx.registerSynchronization(new TimerCreationTransactionSynchronization(timer));
    }
 catch (    RollbackException e) {
      throw new EJBException(e);
    }
catch (    SystemException e) {
      throw new EJBException(e);
    }
  }
}
