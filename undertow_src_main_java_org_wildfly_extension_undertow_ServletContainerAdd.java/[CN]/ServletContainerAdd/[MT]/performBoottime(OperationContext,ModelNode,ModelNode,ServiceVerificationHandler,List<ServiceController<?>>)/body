{
  final PathAddress address=PathAddress.pathAddress(operation.get(OP_ADDR));
  final String name=address.getLastElement().getValue();
  final ServletContainerService container=new ServletContainerService();
  final ServiceTarget target=context.getServiceTarget();
  newControllers.add(target.addService(UndertowService.SERVLET_CONTAINER.append(name),container).addDependency(UndertowService.SERVLET_CONTAINER.append(name).append(Constants.JSP),JSPService.class,container.getJspService()).setInitialMode(ServiceController.Mode.ON_DEMAND).install());
}
