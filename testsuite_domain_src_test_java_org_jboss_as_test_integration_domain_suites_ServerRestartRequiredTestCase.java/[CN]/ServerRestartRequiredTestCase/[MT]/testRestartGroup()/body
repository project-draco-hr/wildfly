{
  final DomainClient client=domainMasterLifecycleUtil.getDomainClient();
  final ModelNode operation=new ModelNode();
  operation.get(OP).set("restart-servers");
  operation.get(OP_ADDR).add(SERVER_GROUP,"reload-test-group");
