{
  if (expr == null) {
    throw new IllegalArgumentException("expr is null");
  }
  final StringBuilder buf=new StringBuilder();
  for (int i=0; i < expr.length(); ++i) {
    final char ch=expr.charAt(i);
    if (ch == '*') {
      buf.append('.');
    }
 else     if (ch == '.') {
      buf.append('\\');
    }
    buf.append(ch);
  }
  return buf.toString();
}
