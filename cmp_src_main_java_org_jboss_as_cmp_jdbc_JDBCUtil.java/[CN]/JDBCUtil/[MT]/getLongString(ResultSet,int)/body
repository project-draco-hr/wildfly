{
  String value;
  Reader textData=rs.getCharacterStream(index);
  if (textData != null) {
    try {
      StringBuffer textBuffer=new StringBuffer();
      char[] tmpBuffer=new char[1000];
      int charsRead;
      while ((charsRead=textData.read(tmpBuffer)) != -1)       textBuffer.append(tmpBuffer,0,charsRead);
      value=textBuffer.toString();
    }
 catch (    java.io.IOException ioException) {
      throw MESSAGES.failedToReadLongString(ioException);
    }
 finally {
      safeClose(textData);
    }
  }
 else   value=null;
  return value;
}
