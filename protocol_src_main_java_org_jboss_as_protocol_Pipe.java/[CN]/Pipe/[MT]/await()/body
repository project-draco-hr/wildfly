{
  boolean intr=false;
  try {
synchronized (lock) {
      while (!readClosed) {
        try {
          lock.wait();
        }
 catch (        InterruptedException e) {
          intr=true;
        }
      }
    }
  }
  finally {
    if (intr) {
      Thread.currentThread().interrupt();
    }
  }
}
