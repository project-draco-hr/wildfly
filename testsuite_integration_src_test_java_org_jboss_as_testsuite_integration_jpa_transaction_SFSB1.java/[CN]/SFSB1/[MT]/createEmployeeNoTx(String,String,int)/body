{
  Employee emp=new Employee();
  emp.setId(id);
  emp.setAddress(address);
  emp.setName(name);
  UserTransaction tx1=sessionContext.getUserTransaction();
  try {
    tx1.begin();
    em.joinTransaction();
    em.persist(emp);
    tx1.commit();
  }
 catch (  Exception e) {
    throw new RuntimeException("couldn't start tx",e);
  }
  em.flush();
}
