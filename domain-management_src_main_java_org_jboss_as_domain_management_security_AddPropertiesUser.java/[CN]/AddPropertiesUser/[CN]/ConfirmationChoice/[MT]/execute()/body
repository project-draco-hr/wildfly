{
  if (message != null) {
    theConsole.printf(message);
  }
  String temp=theConsole.readLine(prompt + " yes/no? ");
switch (convertResponse(temp)) {
case YES:
    return yesState;
case NO:
  return noState;
default :
return new ErrorState("Invalid response. (Valid responses are yes, y, no, and n)",this);
}
}
