{
  FileWriter fw=null;
  BufferedWriter bw=null;
  boolean additionalNewLineNeeded=additionalNewLineNeeded(toFile);
  try {
    fw=new FileWriter(toFile,true);
    bw=new BufferedWriter(fw);
    if (additionalNewLineNeeded) {
      bw.newLine();
    }
    bw.append(entry);
    bw.newLine();
  }
  finally {
    safeClose(bw);
    safeClose(fw);
  }
}
