{
  String entry;
  try {
    String hash=new UsernamePasswordHashUtil().generateHashedHexURP(values.userName,values.realm,values.password);
    entry=values.userName + "=" + hash;
  }
 catch (  NoSuchAlgorithmException e) {
    return new ErrorState(e.getMessage());
  }
  for (  File current : propertiesFiles) {
    try {
      append(entry,current);
      theConsole.printf("Added user '%s' to file '%s'\n",values.userName,current.getCanonicalPath());
    }
 catch (    IOException e) {
      return new ErrorState("Unable to add user to " + current.getAbsolutePath() + " due to error "+ e.getMessage());
    }
  }
  return null;
}
