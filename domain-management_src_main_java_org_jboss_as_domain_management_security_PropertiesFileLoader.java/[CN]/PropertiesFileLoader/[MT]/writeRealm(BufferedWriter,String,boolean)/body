{
  if (wrap) {
    bw.append(COMMENT_PREFIX);
    bw.newLine();
  }
  bw.append(COMMENT_PREFIX);
  bw.append(REALM_COMMENT_PREFIX);
  bw.append(realmName);
  bw.append(REALM_COMMENT_SUFFIX);
  bw.append(REALM_COMMENT_COMMENT);
  if (wrap) {
    bw.newLine();
    bw.append(COMMENT_PREFIX);
    bw.newLine();
  }
}
