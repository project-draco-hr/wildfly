{
  int maxWait=GRACE_TIME;
  String name=null;
  while (maxWait > 0) {
    Thread.sleep(1000);
    name=getEmployee(client,url,message);
    if (name != null) {
      break;
    }
    maxWait-=1000;
  }
  if (name == null)   throw new AssertionError("assertGetEmployee Timed out waiting for a result");
  assertEquals(message,name,"Tom Brady");
}
