def load(cache={}):
    if ('policy' in cache):
        return cache.get('policy')
    helper = ImporterHelper(os.path.join('sos', 'policies'))
    for module in helper.get_modules():
        for policy in import_policy(module):
            if policy.check():
                cache['policy'] = policy()
                return policy()
    raise Exception('No policy could be loaded.')
