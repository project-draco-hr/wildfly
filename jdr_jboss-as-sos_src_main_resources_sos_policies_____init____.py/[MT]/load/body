def load(cache={}):
    if ('policy' in cache):
        return cache.get('policy')
    import sos.policies
    helper = ImporterHelper(sos.policies)
    for module in helper.get_modules():
        for policy in import_policy(module):
            if policy.check():
                cache['policy'] = policy()
    if ('policy' not in cache):
        cache['policy'] = GenericPolicy()
    return cache['policy']
