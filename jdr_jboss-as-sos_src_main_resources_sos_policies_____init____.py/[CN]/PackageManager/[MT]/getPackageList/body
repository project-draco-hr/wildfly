def getPackageList(self):
    "\n        returns a dictionary of packages in the following format:\n        {'package_name': {'name': 'package_name', 'version': 'major.minor.version'}}\n        "
    if self.query_command:
        pkg_list = shell_out(self.query_command).splitlines()
        for pkg in pkg_list:
            (name, version) = pkg.split('|')
            self.packages[name] = {'name': name, 'version': version.split('.'), }
    return self.packages
