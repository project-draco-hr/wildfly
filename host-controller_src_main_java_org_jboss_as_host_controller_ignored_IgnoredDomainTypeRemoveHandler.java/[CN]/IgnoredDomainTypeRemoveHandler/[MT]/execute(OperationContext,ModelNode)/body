{
  final IgnoreDomainResourceTypeResource resource=IgnoreDomainResourceTypeResource.class.cast(context.removeResource(PathAddress.EMPTY_ADDRESS));
  final boolean booting=context.isBooting();
  if (!booting) {
    context.reloadRequired();
  }
  context.completeStep(new OperationContext.ResultHandler(){
    @Override public void handleResult(    OperationContext.ResultAction resultAction,    OperationContext context,    ModelNode operation){
      if (resultAction == OperationContext.ResultAction.KEEP) {
        if (booting) {
          resource.publish();
        }
      }
 else       if (!booting) {
        context.revertReloadRequired();
      }
    }
  }
);
}
