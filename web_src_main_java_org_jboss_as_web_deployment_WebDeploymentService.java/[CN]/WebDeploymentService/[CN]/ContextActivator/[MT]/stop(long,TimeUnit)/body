{
  boolean result=true;
  if (controller.getMode() == Mode.ACTIVE) {
    controller.setMode(Mode.NEVER);
    try {
      result=awaitStateChange(State.DOWN,timeout,unit);
    }
 catch (    TimeoutException ex) {
      WEB_LOGGER.debugf("Timeout stopping context: %s",controller.getName());
    }
  }
  return result;
}
