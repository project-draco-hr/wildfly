{
  if (!value.isDefined()) {
    if (!nullable)     throw new OperationFailedException(new ModelNode().set(MESSAGES.nullNotAllowed(parameterName)));
  }
 else {
    boolean matched=false;
    if (strictType) {
      matched=validTypes.contains(value.getType());
    }
 else {
      for (      ModelType validType : validTypes) {
        if (matches(value,validType)) {
          matched=true;
          break;
        }
      }
    }
    if (!matched)     throw new OperationFailedException(new ModelNode().set(MESSAGES.incorrectType(parameterName,validTypes,value.getType())));
  }
}
