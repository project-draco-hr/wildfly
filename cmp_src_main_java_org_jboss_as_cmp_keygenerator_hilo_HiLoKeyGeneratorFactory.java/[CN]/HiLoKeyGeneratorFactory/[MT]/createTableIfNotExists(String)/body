{
  Connection con=null;
  Statement st=null;
  try {
    if (!SQLUtil.tableExists(tableName,ds)) {
      log.debug("Executing DDL: " + createTableDdl);
      con=ds.getConnection();
      st=con.createStatement();
      st.executeUpdate(createTableDdl);
    }
  }
  finally {
    JDBCUtil.safeClose(st);
    JDBCUtil.safeClose(con);
  }
}
