{
  boolean intr=false;
  try {
    if (locked) {
      long start=System.currentTimeMillis();
      while (locked) {
        try {
          wait();
        }
 catch (        InterruptedException e) {
          intr=true;
        }
      }
      listener.contention(partitionIndex,System.currentTimeMillis() - start);
    }
    locked=true;
  }
  finally {
    if (intr)     Thread.currentThread().interrupt();
  }
}
