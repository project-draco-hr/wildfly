{
  assertNotBuilt();
  buildChildren();
  built=true;
  ModelNode add=new ModelNode();
  add.get(OP).set(ADD);
  add.get(ADDRESS).set(getLdapAuthorizationAddress());
  if (connection != null) {
    add.get(CONNECTION).set(connection);
  }
  parent.addStep(add);
  for (  ModelNode step : additionalSteps) {
    parent.addStep(step);
  }
  return parent;
}
