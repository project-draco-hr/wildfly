{
  PathManagerService service=new PathManagerService(){
  }
;
  SyslogAuditLogHandler handler=new SyslogAuditLogHandler("xxx","xxxx",10,service);
  handler.initialize();
  Assert.assertEquals(SyslogHandler.DEFAULT_FACILITY,handler.getHandlerFacility());
  System.setProperty("org.jboss.TEMP.audit.log.facility","7");
  try {
    handler=new SyslogAuditLogHandler("xxx","xxxx",10,service);
    handler.initialize();
    Assert.assertEquals(SyslogHandler.Facility.NETWORK_NEWS,handler.getHandlerFacility());
  }
  finally {
    System.clearProperty("org.jboss.TEMP.audit.log.facility");
  }
}
