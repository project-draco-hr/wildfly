{
  if (shutdownThread != null) {
    Runtime.getRuntime().removeShutdownHook(shutdownThread);
    shutdownThread=null;
  }
  try {
    if (process != null) {
      process.destroy();
      process.waitFor();
      process=null;
    }
  }
 catch (  Exception e) {
    throw new LifecycleException("Could not stop container",e);
  }
 finally {
    removeTempAuthConfigurationIfAuthNotDefined();
  }
}
