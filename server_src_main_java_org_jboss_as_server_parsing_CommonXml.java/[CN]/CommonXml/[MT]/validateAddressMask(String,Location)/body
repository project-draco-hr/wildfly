{
  final String[] split=value.split("/");
  try {
    if (split.length != 2) {
      throw new XMLStreamException(MESSAGES.invalidAddressMaskValue(value),location);
    }
    final InetAddress addr=InetAddress.getByName(split[0]);
    addr.getAddress();
    Integer.parseInt(split[1]);
  }
 catch (  final NumberFormatException e) {
    throw new XMLStreamException(MESSAGES.invalidAddressMask(split[1],e.getLocalizedMessage()),location,e);
  }
catch (  final UnknownHostException e) {
    throw new XMLStreamException(MESSAGES.invalidAddressValue(split[0],e.getLocalizedMessage()),location,e);
  }
}
