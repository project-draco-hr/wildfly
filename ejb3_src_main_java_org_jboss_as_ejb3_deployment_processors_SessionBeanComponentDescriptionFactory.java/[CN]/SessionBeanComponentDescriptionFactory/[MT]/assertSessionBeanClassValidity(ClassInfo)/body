{
  final short flags=sessionBeanClass.flags();
  final String className=sessionBeanClass.name().toString();
  if (Modifier.isInterface(flags)) {
    logger.warn("[EJB3.1 spec, section 4.9.2] Session bean implementation class MUST NOT be a interface - " + className + " is an interface, hence won't be considered as a session bean");
    return false;
  }
  if (!Modifier.isPublic(flags) || Modifier.isAbstract(flags) || Modifier.isFinal(flags)) {
    logger.warn("[EJB3.1 spec, section 4.9.2] Session bean implementation class MUST be public, not abstract and not final - " + className + " won't be considered as a session bean, since it doesn't meet that requirement");
    return false;
  }
  return true;
}
