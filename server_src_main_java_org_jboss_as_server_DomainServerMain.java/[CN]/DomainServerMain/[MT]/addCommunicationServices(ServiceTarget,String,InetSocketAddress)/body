{
  final HostControllerConnectionService smConnection=new HostControllerConnectionService();
  serviceTarget.addService(HostControllerConnectionService.SERVICE_NAME,smConnection).addInjection(smConnection.getSmAddressInjector(),managementSocket).setInitialMode(ServiceController.Mode.ACTIVE).install();
  final HostControllerServerClient client=new HostControllerServerClient(serverName);
  serviceTarget.addService(HostControllerServerClient.SERVICE_NAME,client).addDependency(HostControllerConnectionService.SERVICE_NAME,Connection.class,client.getSmConnectionInjector()).addDependency(Services.JBOSS_SERVER_CONTROLLER,ServerController.class,client.getServerControllerInjector()).setInitialMode(ServiceController.Mode.ACTIVE).install();
}
