{
  final HostControllerConnectionService hcConnection=new HostControllerConnectionService();
  serviceTarget.addService(HostControllerConnectionService.SERVICE_NAME,hcConnection).addInjection(hcConnection.getHcAddressInjector(),managementSocket).setInitialMode(ServiceController.Mode.ACTIVE).install();
  final HostControllerServerClient client=new HostControllerServerClient(serverName);
  serviceTarget.addService(HostControllerServerClient.SERVICE_NAME,client).addDependency(HostControllerConnectionService.SERVICE_NAME,ProtocolChannel.class,client.getHcChannelInjector()).addDependency(Services.JBOSS_SERVER_CONTROLLER,NewModelController.class,client.getServerControllerInjector()).setInitialMode(ServiceController.Mode.ACTIVE).install();
}
