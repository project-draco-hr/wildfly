{
  final Map<String,String> result=new LinkedHashMap<String,String>();
  for (  String cmd : commands) {
    if (cmd.startsWith("-D")) {
      final String[] parts=cmd.substring(2).split("=");
      if (parts.length == 2) {
        result.put(parts[0],parts[1]);
      }
 else       if (parts.length == 1) {
        result.put(parts[0],"true");
      }
    }
  }
  return result;
}
