{
  URL url=null;
  try {
    final File modDir=new File(System.getProperty("user.dir"));
    File baseDir=new File(modDir,"../../build/target/");
    final File[] children=baseDir.listFiles();
    if (children != null) {
      for (      File child : children) {
        if (child.getName().startsWith("jboss-")) {
          baseDir=new File(child,"docs/schema");
          break;
        }
      }
    }
    final File file=new File(baseDir,xsdName);
    if (file.exists())     url=file.toURI().toURL();
  }
 catch (  IOException e) {
    url=null;
  }
  final ClassLoader classLoader=Thread.currentThread().getContextClassLoader();
  if (url == null)   url=classLoader.getResource("docs/schema" + xsdName);
  if (url == null)   url=classLoader.getResource("docs/" + xsdName);
  if (url == null)   url=classLoader.getResource("schema/" + xsdName);
  if (url == null)   url=classLoader.getResource(xsdName);
  return url;
}
