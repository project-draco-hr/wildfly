{
  os.write(file.getAbsolutePath().getBytes());
  if (file.isDirectory()) {
    for (    File f : file.listFiles()) {
      calculateHash(f,os);
    }
  }
 else {
    final InputStream is=new FileInputStream(file);
    try {
      VFSUtils.copyStreamAndClose(is,os);
    }
  finally {
      safeClose(is);
    }
  }
}
