{
  if (ctx.isBatchMode()) {
    ctx.printLine("Can't start a new batch while in batch mode.");
    return;
  }
  String name=null;
  if (ctx.hasArguments()) {
    name=ctx.getArguments().get(0);
  }
  ctx.startBatch(name);
  List<String> batch=ctx.getCurrentBatch();
  if (!batch.isEmpty()) {
    for (int i=0; i < batch.size(); ++i) {
      String line=batch.get(i);
      ctx.printLine("#" + (i + 1) + ' '+ line);
    }
  }
  return;
}
