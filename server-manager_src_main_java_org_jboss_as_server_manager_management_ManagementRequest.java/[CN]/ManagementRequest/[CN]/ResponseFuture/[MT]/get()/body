{
  boolean intr=false;
  try {
synchronized (this) {
      while (this.result == null && exception == null) {
        try {
          wait();
        }
 catch (        InterruptedException e) {
          intr=true;
        }
      }
    }
    if (exception != null) {
      throw new ExecutionException(exception);
    }
    return result;
  }
  finally {
    if (intr)     Thread.currentThread().interrupt();
  }
}
