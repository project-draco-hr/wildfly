{
  testAddHostScopedRoleWithHosts();
  ModelNode operation=Util.createOperation(REMOVE,pathAddress(pathElement(CORE_SERVICE,MANAGEMENT),pathElement(ACCESS,AUTHORIZATION),pathElement(HOST_SCOPED_ROLE,FOO)));
  ModelNode result=execute(operation);
  checkOutcome(result);
  operation=Util.createOperation(READ_RESOURCE_OPERATION,pathAddress(pathElement(CORE_SERVICE,MANAGEMENT),pathElement(ACCESS,AUTHORIZATION),pathElement(HOST_SCOPED_ROLE)));
  operation.get(RECURSIVE).set(true);
  result=execute(operation);
  checkOutcome(result);
  result=result.get(RESULT);
  assertEquals(2,result.asList().size());
}
