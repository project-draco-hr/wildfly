{
  if (!gate) {
synchronized (this) {
      if (stopping.get()) {
        throw MESSAGES.componentIsStopped();
      }
      while (!gate) {
        try {
          wait();
        }
 catch (        InterruptedException e) {
          Thread.currentThread().interrupt();
          throw MESSAGES.componentNotAvailable();
        }
      }
    }
  }
}
