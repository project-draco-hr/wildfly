{
  ZipEntry dirEntry=new ZipEntry(dirName + "/");
  zos.putNextEntry(dirEntry);
  zos.closeEntry();
  File[] children=dir.listFiles();
  if (children != null) {
    for (    File file : children) {
      if (file.isDirectory()) {
        addDirectoryToZip(file,dirName + "/" + file.getName(),zos);
      }
 else {
        addFileToZip(file,dirName,zos);
      }
    }
  }
}
