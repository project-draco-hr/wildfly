{
  final EnterpriseArchive ear=ShrinkWrap.create(EnterpriseArchive.class,APP_NAME + ".ear");
  JavaArchive jar=ShrinkWrap.create(JavaArchive.class,MODULE_NAME + ".jar");
  jar.addPackage(CommerceTestCase.class.getPackage());
  jar.addAsManifestResource(LazyResultSetLoadingTestCase.class.getPackage(),"MANIFEST.MF","MANIFEST.MF");
  jar.addAsManifestResource(LazyResultSetLoadingTestCase.class.getPackage(),"ejb-jar.xml","ejb-jar.xml");
  jar.addAsManifestResource(LazyResultSetLoadingTestCase.class.getPackage(),"jbosscmp-jdbc.xml","jbosscmp-jdbc.xml");
  ear.addAsModule(jar);
  return ear;
}
