{
  ManagementChannelOpenListenerService channelOpenListenerService=new ManagementChannelOpenListenerService(channelName,OptionMap.EMPTY);
  ServiceBuilder<?> builder=serviceTarget.addService(channelOpenListenerService.getServiceName(endpointName),channelOpenListenerService).addDependency(endpointName,Endpoint.class,channelOpenListenerService.getEndpointInjector()).addDependency(operationHandlerName,ManagementChannelInitialization.class,channelOpenListenerService.getOperationHandlerInjector()).setInitialMode(ACTIVE);
  addController(newControllers,verificationHandler,builder);
}
