{
  registry.registerOperationHandler(new SimpleOperationDefinitionBuilder("migrate",resourceDescriptionResolver).setParameters(ADD_LEGACY_ENTRIES).setRuntimeOnly().setAccessConstraints(SensitiveTargetAccessConstraintDefinition.READ_WHOLE_CONFIG).build(),MigrateOperation.MIGRATE_INSTANCE);
  registry.registerOperationHandler(new SimpleOperationDefinitionBuilder("describe-migration",resourceDescriptionResolver).addParameter(ADD_LEGACY_ENTRIES).setReplyType(ModelType.LIST).setReplyValueType(ModelType.OBJECT).setRuntimeOnly().setAccessConstraints(SensitiveTargetAccessConstraintDefinition.READ_WHOLE_CONFIG).build(),MigrateOperation.DESCRIBE_MIGRATION_INSTANCE);
}
