{
  final String connectorName=model.require(CONNECTOR_REF).asString();
  final ServiceTarget serviceTarget=context.getServiceTarget();
  final EJBRemoteConnectorService service=new EJBRemoteConnectorService((byte)0x00,new String[]{"river"});
  newControllers.add(serviceTarget.addService(EJBRemoteConnectorService.SERVICE_NAME,service).addDependency(RemotingServices.ENDPOINT,Endpoint.class,service.getEndpointInjector()).setInitialMode(ServiceController.Mode.ACTIVE).install());
}
