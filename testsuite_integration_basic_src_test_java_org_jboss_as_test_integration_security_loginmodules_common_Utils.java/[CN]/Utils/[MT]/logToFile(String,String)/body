{
  try {
    File file=new File(where);
    if (!file.exists()) {
      file.createNewFile();
    }
    OutputStream os=new FileOutputStream(file,true);
    Writer writer=new OutputStreamWriter(os);
    writer.write(what);
    if (!what.endsWith("\n")) {
      writer.write("\n");
    }
    writer.close();
    os.close();
  }
 catch (  IOException ex) {
    throw new RuntimeException(ex);
  }
}
