{
  final RandomAccessFile raf=new RandomAccessFile(file,"rw");
  try {
    long filePos=raf.length();
    boolean keepSeeking=true;
    int readVal=0;
    int prevReadVal=0;
    while (keepSeeking) {
      filePos--;
      raf.seek(filePos);
      prevReadVal=readVal;
      readVal=raf.read();
      if (readVal == sig1 && prevReadVal == sig2) {
        raf.write(val);
        keepSeeking=false;
      }
    }
    raf.close();
  }
  finally {
    IoUtils.safeClose(raf);
  }
}
