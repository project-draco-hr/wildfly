def encode_basestring(s):
    'Return a JSON representation of a Python string\n\n    '
    if (isinstance(s, str) and (HAS_UTF8.search(s) is not None)):
        s = s.decode('utf-8')

    def replace(match):
        return ESCAPE_DCT[match.group(0)]
    return ((u'"' + ESCAPE.sub(replace, s)) + u'"')
