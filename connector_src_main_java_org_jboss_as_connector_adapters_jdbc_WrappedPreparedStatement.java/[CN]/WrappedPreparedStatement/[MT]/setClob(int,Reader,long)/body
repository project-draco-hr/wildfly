{
  lock();
  try {
    PreparedStatement statement=getUnderlyingStatement();
    try {
      if (spy)       spyLogger.debugf("%s [%s] setClob(%s, %s, %s)",jndiName,Constants.SPY_LOGGER_PREFIX_PREPARED_STATEMENT,parameterIndex,reader,length);
      statement.setClob(parameterIndex,reader,length);
    }
 catch (    Throwable t) {
      throw checkException(t);
    }
  }
  finally {
    unlock();
  }
}
