{
  final BatchBuilder builder=updateContext.getBatchBuilder();
  builder.addService(JDBCRARDeployService.NAME,new JDBCRARDeployService()).addDependency(ConnectorServices.RESOURCEADAPTERS_SERVICE).addDependency(ConnectorServices.CONNECTOR_CONFIG_SERVICE).addDependency(ConnectorServices.IRONJACAMAR_MDR).setInitialMode(Mode.ON_DEMAND);
  final DataSourcesService dsService=new DataSourcesService(datasources);
  ServiceBuilder<?> serviceBuilder=builder.addService(ConnectorServices.DATASOURCES_SERVICE,dsService);
  serviceBuilder.setInitialMode(Mode.ACTIVE);
}
