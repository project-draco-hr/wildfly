{
  final JavaArchive archive=ShrinkWrap.create(JavaArchive.class,"test-http-deployment.sar").add(new FileAsset(randomContent),"file").addPackage(Simple.class.getPackage());
  File temp=null;
  try {
    temp=File.createTempFile("test","http-deployment");
    archive.as(ZipExporter.class).exportTo(temp,true);
  }
 catch (  IOException e) {
    if (temp != null) {
      temp.delete();
    }
    throw e;
  }
  return temp;
}
