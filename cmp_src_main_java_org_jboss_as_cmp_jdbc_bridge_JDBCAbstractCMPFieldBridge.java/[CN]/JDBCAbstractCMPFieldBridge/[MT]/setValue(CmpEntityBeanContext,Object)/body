{
  if (isReadOnly()) {
    throw new EJBException("Field is read-only: fieldName=" + fieldName);
  }
  if (primaryKeyMember && JDBCEntityBridge.isEjbCreateDone(ctx)) {
    throw new IllegalStateException("A CMP field that is a member " + "of the primary key can only be set in ejbCreate " + "[EJB 2.0 Spec. 10.3.5].");
  }
  if (ctx.isValid()) {
    if (!isLoaded(ctx)) {
      manager.loadField(this,ctx);
    }
    lockingStrategy.changed(this,ctx);
  }
  setInstanceValue(ctx,value);
}
