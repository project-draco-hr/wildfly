{
  PathAddress address=PathAddress.pathAddress(operation.get(OP_ADDR));
  final String name=address.getLastElement().getValue();
  final String type=operation.get(TYPE).asString();
  final ServiceTarget serviceTarget=context.getServiceTarget();
  if (LDAP.equals(type)) {
    final LdapConnectionManagerService connectionManagerService=new LdapConnectionManagerService(model);
    newControllers.add(serviceTarget.addService(LdapConnectionManagerService.BASE_SERVICE_NAME.append(name),connectionManagerService).setInitialMode(ServiceController.Mode.ON_DEMAND).install());
  }
}
