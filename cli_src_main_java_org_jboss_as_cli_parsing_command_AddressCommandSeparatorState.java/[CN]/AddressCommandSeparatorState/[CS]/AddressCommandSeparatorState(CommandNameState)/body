{
  super("ADDR_OP_SEP");
  setEnterHandler(new CharacterHandler(){
    @Override public void handle(    ParsingContext ctx) throws CommandFormatException {
      if (ctx.isEndOfContent()) {
        ctx.leaveState();
      }
      final char ch=ctx.getCharacter();
      if (!Character.isWhitespace(ch)) {
        final CharacterHandler handler=getHandler(ch);
        if (handler != null) {
          handler.handle(ctx);
        }
      }
    }
  }
);
  setDefaultHandler(new EnterStateCharacterHandler(opName));
  setReturnHandler(GlobalCharacterHandlers.LEAVE_STATE_HANDLER);
  setIgnoreWhitespaces(true);
}
