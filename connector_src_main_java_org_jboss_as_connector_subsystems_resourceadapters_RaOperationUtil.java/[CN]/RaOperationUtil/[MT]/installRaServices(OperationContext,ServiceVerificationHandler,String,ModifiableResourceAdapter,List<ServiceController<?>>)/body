{
  final ServiceTarget serviceTarget=context.getServiceTarget();
  final ServiceController<?> resourceAdaptersService=context.getServiceRegistry(false).getService(ConnectorServices.RESOURCEADAPTERS_SERVICE);
  if (resourceAdaptersService == null) {
    newControllers.add(serviceTarget.addService(ConnectorServices.RESOURCEADAPTERS_SERVICE,new ResourceAdaptersService()).setInitialMode(ServiceController.Mode.ACTIVE).addListener(verificationHandler).install());
  }
  ServiceName raServiceName=ServiceName.of(ConnectorServices.RA_SERVICE,name);
  final ServiceController<?> service=context.getServiceRegistry(true).getService(raServiceName);
  if (service == null) {
    ResourceAdapterService raService=new ResourceAdapterService(resourceAdapter,name);
    newControllers.add(serviceTarget.addService(raServiceName,raService).setInitialMode(ServiceController.Mode.ACTIVE).addDependency(ConnectorServices.RESOURCEADAPTERS_SERVICE,ResourceAdaptersService.ModifiableResourceAdaptors.class,raService.getResourceAdaptersInjector()).addDependency(ConnectorServices.RESOURCEADAPTERS_SUBSYSTEM_SERVICE,CopyOnWriteArrayListMultiMap.class,raService.getResourceAdaptersMapInjector()).addListener(verificationHandler).install());
  }
  return raServiceName;
}
