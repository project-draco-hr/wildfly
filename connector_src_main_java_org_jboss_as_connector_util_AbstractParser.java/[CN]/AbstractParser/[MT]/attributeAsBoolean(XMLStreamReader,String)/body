{
  String attributeString=rawAttributeText(reader,attributeName);
  String stringValue=getSubstitutionValue(attributeString);
  if (stringValue == null || stringValue.length() == 0 || stringValue.trim().equalsIgnoreCase("true") || stringValue.trim().equalsIgnoreCase("false")) {
    return attributeString == null || stringValue.trim().length() == 0 ? null : Boolean.valueOf(reader.getAttributeValue("",attributeName).trim());
  }
 else {
    throw new ParserException(bundle.attributeAsBoolean(attributeString,reader.getLocalName()));
  }
}
