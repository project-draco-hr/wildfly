{
  URI redirectUri;
  try {
    if (port != defaultPort) {
      redirectUri=new URI(scheme,null,host,port,uri,null,null);
    }
 else {
      redirectUri=new URI(scheme,null,host,-1,uri,null,null);
    }
  }
 catch (  URISyntaxException e) {
    throw new IOException(e);
  }
  return redirectUri.toString();
}
