{
  final FileInputStream fis=new FileInputStream(file);
  try {
    final FileOutputStream fos=new FileOutputStream(backup);
    try {
      StreamUtils.copyStream(fis,fos);
      fos.flush();
      fos.getFD().sync();
      fos.close();
    }
  finally {
      StreamUtils.safeClose(fos);
    }
  }
  finally {
    StreamUtils.safeClose(fis);
  }
}
