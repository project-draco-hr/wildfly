{
  if (notification instanceof AttributeChangeNotification) {
    AttributeChangeNotification attributeChangeNotification=(AttributeChangeNotification)notification;
    int oldValue=(Integer)attributeChangeNotification.getOldValue();
    int newValue=(Integer)attributeChangeNotification.getNewValue();
    logger.info("Attribute change notification: " + oldValue + "->"+ newValue);
    if (oldValue == STOPPED && newValue == STARTING)     startingNotificationReceived=true;
 else     if (oldValue == STARTING && newValue == STARTED)     startedNotificationReceived=true;
 else     if (oldValue == STARTED && newValue == STOPPING)     stoppingNotificationReceived=true;
 else     if (oldValue == STOPPING && newValue == STOPPED)     stoppedNotificationReceived=true;
  }
}
