{
  if (path != null) {
    int length=path.length();
    if (length > 0) {
      char c0=path.charAt(0);
      if (c0 == '/') {
        return true;
      }
 else       if (length > 1) {
        char c1=path.charAt(1);
        if (c0 == '\\' && c1 == '\\') {
          return true;
        }
 else         if (length > 2 && c1 == ':' && path.charAt(2) == '\\' && isDriveLetter(c0)) {
          return true;
        }
      }
    }
  }
  return false;
}
