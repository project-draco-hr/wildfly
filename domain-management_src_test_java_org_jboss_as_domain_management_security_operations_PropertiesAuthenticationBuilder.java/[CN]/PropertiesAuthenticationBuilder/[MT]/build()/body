{
  assertNotBuilt();
  built=true;
  ModelNode add=new ModelNode();
  add.get(OP).set(ADD);
  add.get(ADDRESS).set(parent.getRealmAddress().add(AUTHENTICATION,PROPERTIES));
  if (plainText) {
    add.get(PLAIN_TEXT).set(true);
  }
  if (path != null) {
    add.get(PATH).set(path);
  }
  if (relativeTo != null) {
    add.get(RELATIVE_TO).set(relativeTo);
  }
  parent.addStep(add);
  return parent;
}
