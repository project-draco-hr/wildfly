{
  if (xmlName.contains("-")) {
    final StringBuilder result=new StringBuilder();
    boolean toUpper=false;
    for (    char c : xmlName.toCharArray()) {
      if (c == '-') {
        toUpper=true;
        continue;
      }
      if (toUpper) {
        result.append(Character.toUpperCase(c));
        toUpper=false;
      }
 else {
        result.append(c);
      }
    }
    return result.toString();
  }
  return xmlName;
}
