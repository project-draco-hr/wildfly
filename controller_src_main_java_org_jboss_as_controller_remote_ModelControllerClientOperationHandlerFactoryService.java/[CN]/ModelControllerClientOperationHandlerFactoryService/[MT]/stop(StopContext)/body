{
  super.stop(context);
  final ManagementMessageHandler handler=this.handler;
  if (handler != null) {
    handler.shutdown();
    try {
      handler.awaitCompletion(100,TimeUnit.MILLISECONDS);
    }
 catch (    Exception e) {
      ControllerLogger.ROOT_LOGGER.warnf(e,"service shutdown did not complete");
    }
 finally {
      handler.shutdownNow();
    }
  }
}
