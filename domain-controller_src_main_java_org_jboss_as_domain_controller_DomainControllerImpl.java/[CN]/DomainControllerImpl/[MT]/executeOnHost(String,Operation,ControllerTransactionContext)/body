{
  DomainControllerSlaveClient client=hosts.get(hostName);
  if (client == null) {
    return null;
  }
 else   if (hostName.equals(localHostName)) {
    return tx == null ? client.execute(operation) : client.execute(operation,tx);
  }
 else {
synchronized (client) {
      return tx == null ? client.execute(operation) : client.execute(operation,tx);
    }
  }
}
