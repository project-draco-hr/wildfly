{
  log.infof("%s listening on %d",name,serverSocket.getLocalPort());
  while (!shutdown.get()) {
    try {
      Socket socket=serverSocket.accept();
      executor.execute(new AcceptorTask(socket));
    }
 catch (    SocketException e) {
      log.infof("%s server socket was closed",name);
    }
catch (    IOException e) {
      e.printStackTrace();
    }
  }
}
