{
  final ServiceController<?> controller=updateContext.getServiceContainer().getService(ThreadsServices.threadFactoryName(name));
  if (controller == null) {
    handler.handleSuccess(null,param);
  }
 else {
    controller.addListener(new UpdateResultHandler.ServiceRemoveListener<P>(handler,param));
    controller.setMode(ServiceController.Mode.REMOVE);
  }
}
