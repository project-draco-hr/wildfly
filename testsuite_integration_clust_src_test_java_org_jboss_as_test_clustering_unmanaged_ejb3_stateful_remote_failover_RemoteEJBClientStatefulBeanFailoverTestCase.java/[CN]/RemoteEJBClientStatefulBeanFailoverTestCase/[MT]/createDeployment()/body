{
  final JavaArchive ejbJar=ShrinkWrap.create(JavaArchive.class,MODULE_NAME + ".jar");
  ejbJar.addPackage(CounterBean.class.getPackage());
  ejbJar.addAsManifestResource(new StringAsset("<beans>" + "<decorators><class>" + CDIDecorator.class.getName() + "</class></decorators>"+ "</beans>"),"beans.xml");
  return ejbJar;
}
