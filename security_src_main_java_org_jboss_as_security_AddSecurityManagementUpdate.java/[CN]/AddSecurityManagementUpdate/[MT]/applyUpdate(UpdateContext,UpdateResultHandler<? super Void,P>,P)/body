{
  final ServiceTarget target=updateContext.getServiceTarget();
  if (authenticationManagerClassName.equals("default"))   authenticationManagerClassName=AUTHENTICATION_MANAGER;
  if (defaultCallbackHandlerClassName.equals("default"))   defaultCallbackHandlerClassName=CALLBACK_HANDLER;
  final SecurityManagementService securityManagementService=new SecurityManagementService(authenticationManagerClassName,deepCopySubjectMode,defaultCallbackHandlerClassName,AUTHORIZATION_MANAGER);
  target.addService(SecurityManagementService.SERVICE_NAME,securityManagementService).addListener(new UpdateResultHandler.ServiceStartListener<P>(resultHandler,param)).setInitialMode(ServiceController.Mode.ACTIVE).install();
}
