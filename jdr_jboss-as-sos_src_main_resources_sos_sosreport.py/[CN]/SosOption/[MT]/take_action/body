def take_action(self, action, dest, opt, value, values, parser):
    ' Performs list extension on plugins '
    if (action == 'extend'):
        try:
            lvalue = value.split(',')
        except:
            pass
        else:
            values.ensure_value(dest, deque()).extend(lvalue)
    else:
        Option.take_action(self, action, dest, opt, value, values, parser)
