def set_option(self, name, value=None):
    "Allows setting of 'command line options' without passing in a\n        command line. Name should be the command line option name of the\n        option to set."
    if self.parser.has_option(name):
        option = self.parser.get_option(name)
        option.process(name, value, self.opts, self.parser)
