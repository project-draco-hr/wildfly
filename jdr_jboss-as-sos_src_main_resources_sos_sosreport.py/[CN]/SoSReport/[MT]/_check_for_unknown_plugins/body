def _check_for_unknown_plugins(self):
    import itertools
    for plugin in itertools.chain(self.opts.onlyplugins, self.opts.noplugins, self.opts.enableplugins):
        plugin_name = plugin.split('.')[0]
        if (not (plugin_name in self.plugin_names)):
            self.soslog.fatal(('a non-existing plugin (%s) was specified in the command line' % plugin_name))
            self._exit(1)
