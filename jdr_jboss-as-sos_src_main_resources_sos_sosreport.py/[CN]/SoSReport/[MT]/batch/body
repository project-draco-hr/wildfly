def batch(self):
    if self.opts.batch:
        self.ui_log.info(self.policy.get_msg())
    else:
        msg = self.policy.get_msg()
        msg += _('Press ENTER to continue, or CTRL-C to quit.\n')
        try:
            raw_input(msg)
        except:
            self.ui_log.info('')
            self._exit()
