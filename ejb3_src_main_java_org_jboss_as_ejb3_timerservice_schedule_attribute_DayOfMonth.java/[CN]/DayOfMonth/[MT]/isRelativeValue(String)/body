{
  if (value == null) {
    throw new IllegalArgumentException("Value is null, cannot determine if it's relative");
  }
  if (value.equalsIgnoreCase("last")) {
    return true;
  }
  if (this.isValidNegativeDayOfMonth(value)) {
    return true;
  }
  if (this.isDayOfWeekBased(value)) {
    return true;
  }
  return false;
}
