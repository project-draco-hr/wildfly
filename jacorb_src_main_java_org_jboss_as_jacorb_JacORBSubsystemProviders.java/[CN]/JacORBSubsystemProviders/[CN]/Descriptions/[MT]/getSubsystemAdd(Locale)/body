{
  final ResourceBundle bundle=getResourceBundle(locale);
  final ModelNode op=new ModelNode();
  op.get(OPERATION_NAME).set(ADD);
  op.get(DESCRIPTION).set(bundle.getString("jacorb.add"));
  for (  SimpleAttributeDefinition attrDefinition : JacORBSubsystemDefinitions.ORB_ATTRIBUTES)   attrDefinition.addOperationParameterDescription(bundle,"orb",op);
  for (  SimpleAttributeDefinition attrDefinition : JacORBSubsystemDefinitions.ORB_CONN_ATTRIBUTES)   attrDefinition.addOperationParameterDescription(bundle,"orb.conn",op);
  for (  SimpleAttributeDefinition attrDefinition : JacORBSubsystemDefinitions.ORB_INIT_ATTRIBUTES)   attrDefinition.addOperationParameterDescription(bundle,"orb.init",op);
  for (  SimpleAttributeDefinition attrDefinition : JacORBSubsystemDefinitions.POA_ATTRIBUTES)   attrDefinition.addOperationParameterDescription(bundle,"poa",op);
  for (  SimpleAttributeDefinition attrDefinition : JacORBSubsystemDefinitions.POA_RP_ATTRIBUTES)   attrDefinition.addOperationParameterDescription(bundle,"poa.request-processors",op);
  for (  SimpleAttributeDefinition attrDefinition : JacORBSubsystemDefinitions.NAMING_ATTRIBUTES)   attrDefinition.addOperationParameterDescription(bundle,"naming",op);
  for (  SimpleAttributeDefinition attrDefinition : JacORBSubsystemDefinitions.INTEROP_ATTRIBUTES)   attrDefinition.addOperationParameterDescription(bundle,"interop",op);
  for (  SimpleAttributeDefinition attrDefinition : JacORBSubsystemDefinitions.SECURITY_ATTRIBUTES)   attrDefinition.addOperationParameterDescription(bundle,"security",op);
  addPropertiesDescriptions(op.get(REQUEST_PROPERTIES,JacORBSubsystemConstants.PROPERTIES),locale);
  op.get(REPLY_PROPERTIES).setEmptyObject();
  return op;
}
