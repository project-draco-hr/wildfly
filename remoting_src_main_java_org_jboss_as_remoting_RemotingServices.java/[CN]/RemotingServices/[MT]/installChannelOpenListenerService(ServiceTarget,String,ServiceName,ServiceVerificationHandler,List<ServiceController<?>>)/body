{
  final ChannelOpenListenerService channelOpenListenerService=new ChannelOpenListenerService(channelName,OptionMap.EMPTY);
  ServiceBuilder<?> builder=serviceTarget.addService(channelOpenListenerService.getServiceName(),channelOpenListenerService).addDependency(RemotingServices.ENDPOINT,Endpoint.class,channelOpenListenerService.getEndpointInjector()).addDependency(operationHandlerName,ManagementOperationHandlerFactory.class,channelOpenListenerService.getOperationHandlerInjector()).setInitialMode(Mode.ACTIVE);
  addController(newControllers,verificationHandler,builder);
}
