{
  final ChannelOpenListenerService channelOpenListenerService=new ChannelOpenListenerService(channelName,OptionMap.EMPTY);
  ServiceBuilder<?> builder=serviceTarget.addService(channelOpenListenerService.getServiceName(),channelOpenListenerService).addDependency(RemotingServices.ENDPOINT,Endpoint.class,channelOpenListenerService.getEndpointInjector()).addDependency(operationHandlerName,ManagementOperationHandler.class,channelOpenListenerService.getOperationHandlerInjector()).setInitialMode(Mode.ACTIVE);
  if (verificationHandler != null) {
    builder.addListener(verificationHandler);
  }
  addController(newControllers,builder.install());
}
