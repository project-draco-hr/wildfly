{
  final ServiceName operationHandlerName=operationHandlerName(modelControllerName,channelName);
  addController(newControllers,serviceTarget.addService(operationHandlerName,operationHandlerService).addDependency(modelControllerName,NewModelController.class,operationHandlerService.getModelControllerInjector()).addListener(verificationHandler).setInitialMode(Mode.ACTIVE).install());
  installChannelOpenListenerService(serviceTarget,channelName,operationHandlerName,verificationHandler,newControllers);
}
