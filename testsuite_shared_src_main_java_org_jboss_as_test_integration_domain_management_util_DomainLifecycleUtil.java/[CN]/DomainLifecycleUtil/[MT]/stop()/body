{
  try {
    if (process != null) {
      process.stop();
      process.waitFor();
      process=null;
    }
  }
 catch (  Exception e) {
    throw new RuntimeException("Could not stop container",e);
  }
 finally {
    closeConnection();
    final ExecutorService exec=executor;
    if (exec != null) {
      exec.shutdownNow();
      executor=null;
    }
  }
}
