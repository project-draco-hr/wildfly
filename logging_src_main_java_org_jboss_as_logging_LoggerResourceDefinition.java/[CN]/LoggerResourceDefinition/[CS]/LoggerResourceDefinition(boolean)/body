{
  super(LOGGER_PATH,LoggingExtension.getResourceDescriptionResolver(CommonAttributes.LOGGER),(includeLegacy ? new LoggerOperations.LoggerAddOperationStepHandler(join(ATTRIBUTES,LEGACY_ATTRIBUTES)) : new LoggerOperations.LoggerAddOperationStepHandler(ATTRIBUTES)),LoggerOperations.REMOVE_LOGGER);
  writableAttributes=(includeLegacy ? join(WRITABLE_ATTRIBUTES,LEGACY_ATTRIBUTES) : WRITABLE_ATTRIBUTES);
  this.writeHandler=new LoggerOperations.LoggerWriteAttributeHandler(writableAttributes);
}
