{
  final ResourceTransformationDescriptionBuilder child=subsystemBuilder.addChildResource(LOGGER_PATH).addOperationTransformationOverride(ADD).setCustomOperationTransformer(LoggingOperationTransformer.INSTANCE).inheritResourceAttributeDefinitions().end().addOperationTransformationOverride(WRITE_ATTRIBUTE_OPERATION).setCustomOperationTransformer(LoggingOperationTransformer.INSTANCE).inheritResourceAttributeDefinitions().end().addOperationTransformationOverride(ADD_HANDLER_OPERATION_NAME).setCustomOperationTransformer(LoggingOperationTransformer.INSTANCE).inheritResourceAttributeDefinitions().end().addOperationTransformationOverride(REMOVE_HANDLER_OPERATION_NAME).setCustomOperationTransformer(LoggingOperationTransformer.INSTANCE).inheritResourceAttributeDefinitions().end().getAttributeBuilder().addRejectCheck(RejectAttributeChecker.SIMPLE_EXPRESSIONS,EXPRESSION_ATTRIBUTES).end().setCustomResourceTransformer(new LoggingResourceTransformer(CATEGORY,FILTER_SPEC));
  loggingProfileBuilder.rejectChildResource(LOGGER_PATH);
  return child;
}
