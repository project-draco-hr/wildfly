{
  emp.setAddress(address);
  UserTransaction tx1=sessionContext.getUserTransaction();
  try {
    tx1.begin();
    System.out.println("Inside JTA updateEmployeeTx after transaction begins:--");
    em.joinTransaction();
    em.merge(emp);
    tx1.commit();
  }
 catch (  Exception e) {
    throw new RuntimeException("couldn't start tx",e);
  }
}
