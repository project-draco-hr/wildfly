def runlevelByService(self, name):
    ret = []
    (out, err, sts) = self._system(('LC_ALL=C /sbin/chkconfig --list %s' % name))
    if err:
        return ret
    for tabs in out.split()[1:]:
        try:
            (runlevel, onoff) = tabs.split(':', 1)
        except:
            pass
        else:
            if (onoff == 'on'):
                ret.append(int(runlevel))
    return ret
