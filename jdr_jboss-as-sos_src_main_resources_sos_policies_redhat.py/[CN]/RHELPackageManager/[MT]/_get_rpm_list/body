def _get_rpm_list(self):
    pkg_list = subprocess.Popen(['rpm', '-qa', '--queryformat', '%{NAME}|%{VERSION}\\n'], stdout=subprocess.PIPE).communicate()[0].splitlines()
    self._rpms = {}
    for pkg in pkg_list:
        (name, version) = pkg.split('|')
        self._rpms[name] = {'name': name, 'version': version, }
