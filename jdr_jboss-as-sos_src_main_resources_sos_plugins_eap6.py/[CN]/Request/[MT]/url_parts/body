def url_parts(self):
    'Generator function to split a url into (key, value) tuples. The url\n        should contain an even number of pairs.  In the case of / the generator\n        will immediately stop iteration.'
    if (self.resource == '/'):
        raise StopIteration
    parts = self.resource.lstrip('/').split('/')
    while parts:
        yield (parts.pop(0), parts.pop(0))
