def url_parts(self):
    'Generator function to split a url into (key, value) tuples. The\n            url should contain an even number of pairs.  In the case of / the\n            generator will immediately stop iteration.\n            '
    parts = self.resource.strip('/').split('/')
    if (parts == ['']):
        raise StopIteration
    while parts:
        yield (parts.pop(0), parts.pop(0))
