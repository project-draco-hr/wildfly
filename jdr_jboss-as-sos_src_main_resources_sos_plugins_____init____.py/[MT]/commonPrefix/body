def commonPrefix(l1, l2, common=None):
    "\n    Returns a tuple like the following:\n        ([common, elements, from l1, and l2], [[tails, from, l1], [tails, from, l2]])\n\n    >>> commonPrefix(['usr','share','foo'], ['usr','share','bar'])\n    (['usr','share'], [['foo'], ['bar']])\n    "
    if (common is None):
        common = []
    if ((len(l1) < 1) or (len(l2) < 1) or (l1[0] != l2[0])):
        return (common, [l1, l2])
    return commonPrefix(l1[1:], l2[1:], (common + [l1[0]]))
