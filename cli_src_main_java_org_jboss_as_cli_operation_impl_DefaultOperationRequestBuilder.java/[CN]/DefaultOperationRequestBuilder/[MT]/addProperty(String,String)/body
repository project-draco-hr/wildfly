{
  if (name == null || name.trim().isEmpty())   throw new IllegalArgumentException("The argument name is not specified: '" + name + "'");
  if (value == null || value.trim().isEmpty())   throw new IllegalArgumentException("The argument value is not specified for " + name + ": '"+ value+ "'");
  ModelNode toSet=null;
  try {
    toSet=ModelNode.fromString(value);
  }
 catch (  Exception e) {
    toSet=new ModelNode().set(value);
  }
  request.get(name).set(toSet);
}
