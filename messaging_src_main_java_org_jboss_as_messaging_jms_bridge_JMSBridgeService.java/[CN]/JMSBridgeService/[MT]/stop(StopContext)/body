{
  final Runnable r=new Runnable(){
    @Override public void run(){
      try {
        bridge.stop();
        MessagingLogger.MESSAGING_LOGGER.stoppedService("JMS Bridge",bridgeName);
        context.complete();
      }
 catch (      Exception e) {
        MESSAGING_LOGGER.failedToDestroy("bridge",bridgeName);
      }
    }
  }
;
  context.asynchronous();
  executor.execute(r);
}
