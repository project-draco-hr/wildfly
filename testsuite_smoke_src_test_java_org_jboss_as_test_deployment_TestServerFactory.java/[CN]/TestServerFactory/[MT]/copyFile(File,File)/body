{
  final FileInputStream is=new FileInputStream(src);
  try {
    final FileOutputStream os=new FileOutputStream(dest);
    try {
      byte[] bytes=new byte[8192];
      int read;
      while ((read=is.read(bytes)) > -1) {
        os.write(bytes,0,read);
      }
      os.close();
    }
  finally {
      safeClose(os);
    }
    is.close();
  }
  finally {
    safeClose(is);
  }
}
