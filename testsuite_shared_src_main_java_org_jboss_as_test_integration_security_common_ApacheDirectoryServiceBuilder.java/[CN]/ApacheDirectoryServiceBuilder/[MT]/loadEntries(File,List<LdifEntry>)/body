{
  if (ldifFile.isDirectory()) {
    File[] files=ldifFile.listFiles(ldifFilter);
    for (    File f : files) {
      loadEntries(f,entries);
    }
  }
 else {
    LdifReader reader=new LdifReader();
    try {
      entries.addAll(reader.parseLdifFile(ldifFile.getAbsolutePath()));
    }
  finally {
      reader.close();
    }
  }
}
