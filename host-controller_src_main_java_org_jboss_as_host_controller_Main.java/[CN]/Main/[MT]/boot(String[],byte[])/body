{
  try {
    final HostControllerEnvironment config=determineEnvironment(args);
    if (config == null) {
      abort(null);
      return null;
    }
 else {
      try {
        final HostControllerBootstrap hc=new HostControllerBootstrap(config,authCode);
        hc.bootstrap();
        return hc;
      }
 catch (      Throwable t) {
        abort(t);
        return null;
      }
    }
  }
 catch (  Throwable t) {
    abort(t,ExitCodes.HOST_CONTROLLER_ABORT_EXIT_CODE);
    return null;
  }
}
