{
  String rightBlock="rightVaultBlock";
  String wrongBlock="wrongVaultBlock";
  String vaultConfig="<vault code=\"" + CustomDummyVault.class.getName() + "\" module=\""+ MODULE_NAME+ "\">"+ "<vault-option name=\""+ rightBlock+ "\" value=\""+ RIGHT_PASSWORD+ "\"/>"+ "<vault-option name=\""+ wrongBlock+ "\" value=\""+ WRONG_PASSWORD+ "\"/>"+ "</vault>";
  String vaultPasswordString="VAULT::" + rightBlock + "::good::1";
  String wrongVaultPasswordString="VAULT::" + wrongBlock + "::wrong::1";
  String nonExistingVaultPasswordString="VAULT::nonExistingBlock::non::1";
  String rightVaultPassConfig=Utils.propertiesReplacer(JBOSS_CLI_FILE,CLIENT_KEYSTORE_FILE,CLIENT_TRUSTSTORE_FILE,vaultPasswordString,vaultConfig).replaceAll("urn:jboss:cli:2.0","urn:jboss:cli:3.0");
  String wrongVaultPassConfig=Utils.propertiesReplacer(JBOSS_CLI_FILE,CLIENT_KEYSTORE_FILE,CLIENT_TRUSTSTORE_FILE,wrongVaultPasswordString,vaultConfig).replaceAll("urn:jboss:cli:2.0","urn:jboss:cli:3.0");
  String nonVaultPassConfig=Utils.propertiesReplacer(JBOSS_CLI_FILE,CLIENT_KEYSTORE_FILE,CLIENT_TRUSTSTORE_FILE,nonExistingVaultPasswordString,vaultConfig).replaceAll("urn:jboss:cli:2.0","urn:jboss:cli:3.0");
  FileUtils.write(RIGHT_VAULT_PASSWORD_FILE,rightVaultPassConfig);
  FileUtils.write(WRONG_VAULT_PASSWORD_FILE,wrongVaultPassConfig);
  FileUtils.write(NON_EXISTING_VAULT_PASSWORD_FILE,nonVaultPassConfig);
}
