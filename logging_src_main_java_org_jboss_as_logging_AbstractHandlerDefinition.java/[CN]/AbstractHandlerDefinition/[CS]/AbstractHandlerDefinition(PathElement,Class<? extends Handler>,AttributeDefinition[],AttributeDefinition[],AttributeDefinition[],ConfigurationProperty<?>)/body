{
  super(path,LoggingExtension.getResourceDescriptionResolver("handler"),new HandlerAddOperationStepHandler(type,addAttributes,constructionProperties),HandlerOperations.REMOVE_HANDLER);
  this.writableAttributes=writableAttributes;
  writeHandler=new LogHandlerWriteAttributeHandler(this.writableAttributes);
  this.readOnlyAttributes=readOnlyAttributes;
}
