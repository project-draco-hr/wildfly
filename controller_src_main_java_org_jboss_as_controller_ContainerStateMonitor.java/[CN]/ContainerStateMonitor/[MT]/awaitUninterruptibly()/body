{
  boolean interruped=false;
  try {
    while (true) {
      try {
        monitor.awaitStability(failed,problems);
        break;
      }
 catch (      InterruptedException e) {
        interruped=true;
      }
    }
  }
  finally {
    if (interruped) {
      Thread.currentThread().interrupt();
    }
  }
}
