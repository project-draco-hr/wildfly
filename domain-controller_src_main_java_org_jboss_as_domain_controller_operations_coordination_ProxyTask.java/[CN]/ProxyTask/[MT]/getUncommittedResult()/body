{
synchronized (uncommittedResultRef) {
    while (uncommittedResultRef.get() == null) {
      try {
        uncommittedResultRef.wait();
      }
 catch (      InterruptedException ie) {
        cancelRemoteTransaction=true;
        throw ie;
      }
    }
    if (exception != null) {
      throw exception;
    }
    return uncommittedResultRef.get();
  }
}
