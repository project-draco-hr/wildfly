{
  final int c1=moduleSpec.lastIndexOf(':');
  final String name;
  final String slot;
  if (c1 != -1) {
    name=moduleSpec.substring(0,c1);
    slot=moduleSpec.substring(c1 + 1);
  }
 else {
    name=moduleSpec;
    slot="main";
  }
  final String[] segments=name.split("\\.");
  File dir=baseDir;
  for (  String segment : segments) {
    dir=new File(dir,segment);
  }
  dir=new File(dir,slot);
  dir.mkdirs();
  return dir;
}
