{
  OutputStream os=null;
  try {
    File file=new File(filePath);
    file.delete();
    Assert.assertTrue("Cannot create new file",file.createNewFile());
    os=new FileOutputStream(file);
    os.write(content.getBytes());
    os.flush();
  }
  finally {
    if (os != null)     os.close();
  }
}
