{
  lock();
  try {
    checkState();
    try {
      if (spy)       spyLogger.debugf("%s [%s] setQueryTimeout(%s)",jndiName,Constants.SPY_LOGGER_PREFIX_STATEMENT,timeout);
      s.setQueryTimeout(timeout);
    }
 catch (    Throwable t) {
      throw checkException(t);
    }
  }
  finally {
    unlock();
  }
}
