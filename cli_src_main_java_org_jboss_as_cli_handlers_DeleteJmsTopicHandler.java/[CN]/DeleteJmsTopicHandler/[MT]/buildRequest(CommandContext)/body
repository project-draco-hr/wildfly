{
  DefaultOperationRequestBuilder builder=new DefaultOperationRequestBuilder();
  if (ctx.isDomainMode()) {
    final String profile=this.profile.getValue(ctx.getParsedArguments());
    if (profile == null) {
      throw new OperationFormatException("Required argument --profile is missing.");
    }
    builder.addNode("profile",profile);
  }
  final String name;
  try {
    name=this.name.getValue(ctx.getParsedArguments());
  }
 catch (  IllegalArgumentException e) {
    throw new OperationFormatException("Missing required name argument.");
  }
  builder.addNode("subsystem","jms");
  builder.addNode("topic",name);
  builder.setOperationName("remove");
  return builder.buildRequest();
}
